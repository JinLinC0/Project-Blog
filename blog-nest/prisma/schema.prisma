generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户表
model user {
  id       Int    @id @default(autoincrement()) @db.UnsignedInt
  name     String @unique
  password String
}

// 文章表
model article {
  id      Int    @id @default(autoincrement()) @db.UnsignedInt
  title   String
  content String @db.Text
}
